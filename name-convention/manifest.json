{
  "name": "Name Convention",
  "version": "1.1",
  "description": "Naming convention is a generator of the branch name, commit message, and merge request description based on JIRA issue page.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "action": {
      "default_title": "Name Convention",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline'"
  }
}
